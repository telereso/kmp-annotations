<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="@dimen/keyline_main">

  <ImageView
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_normal"
    android:minHeight="@dimen/image_large" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/pokeman_name"
    android:textSize="@dimen/title_primary" />

  <TextView
    android:id="@+id/name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_normal"
    android:textColor="@color/colorPrimary"
    android:textSize="@dimen/headline5"
    tools:text="Pikachu" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/pokeman_type"
    android:textSize="@dimen/title_primary" />

  <TextView
    android:id="@+id/type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_normal"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="@dimen/body"
    android:textStyle="bold"
    tools:text="Electric" />

</LinearLayout>